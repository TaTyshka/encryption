<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@dark-theme.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.sortix.encryption.EncryptionController">
    <top>
        <MenuBar>
            <Menu text="Режимы шифрования">
                <MenuItem onAction="#switchToCaesar" text="Цезарь" />
                <MenuItem onAction="#switchToAtbash" text="Атбаш" />
            </Menu>
        </MenuBar>
    </top>

    <center>
        <GridPane alignment="center" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="right" minWidth="150" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Введите текст:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="inputTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label fx:id="keyTextLabel" text="Введите ключ:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="keyTextField" maxWidth="50" minWidth="50" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Выберите алфавит:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <RadioButton fx:id="englishRadioButton" text="Английский" textFill="WHITE" />
                <RadioButton fx:id="russianRadioButton" text="Русский" textFill="WHITE" />
            </HBox>

            <HBox alignment="center" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                <CheckBox fx:id="encryptSpacesCheckBox" nodeOrientation="RIGHT_TO_LEFT" text="Пробелы" />
                <CheckBox fx:id="encryptPunctuationCheckBox" nodeOrientation="RIGHT_TO_LEFT" text="Знаки препинания" />
                <CheckBox fx:id="includeUpperCaseCheckBox" nodeOrientation="RIGHT_TO_LEFT" text="Заглавные буквы" />
            </HBox>
            <Label text="Текущий алфавит:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <Label fx:id="alphabetLabel" minWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Смещённый алфавит:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <Label fx:id="shiftedAlphabetLabel" minWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <TextArea fx:id="outputTextArea" editable="false" wrapText="true" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6" />

            <HBox alignment="center" spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="7">
                <Button onAction="#encryptText" text="Зашифровать" />
                <Button onAction="#decryptText" text="Расшифровать" />
            </HBox>
        </GridPane>
    </center>
</BorderPane>
